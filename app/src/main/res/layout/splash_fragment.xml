<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_background_splash">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_hearts_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/book_app"
            android:textAlignment="center"
            android:autoSizeTextType="uniform"
            android:textColor="@color/violet"
            android:textSize="52sp"
            android:fontFamily="@font/georgia_bold_italic"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:text="@string/welcome_to_book_app"
            android:textColor="@color/white_80"
            android:textSize="24sp"
            android:fontFamily="@font/nunitosans_bold"
            android:includeFontPadding="false"
            android:layout_marginTop="12dp"/>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="40dp"
            app:trackCornerRadius="6dp"
            app:indicatorColor="@color/white"
            app:trackColor="@color/white_20"
            android:indeterminate="true"
            app:trackThickness="6dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>